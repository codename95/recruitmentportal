@model RecruitmentPortal.Models.Entities.Job
@{
    ViewBag.Title = "JobDetails";
}

<div class="col-md-12">
    <div class="col-md-9">
        <form class="form-horizontal" method="post" action="/Admin/AddNewJob">
            <fieldset>

                <!-- Form Name -->
                <legend>Job Details</legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="JobTitle">Title</label>
                    <div class="col-md-4">
                        <input id="JobTitle" value="@Model.JobTitle" type="text" placeholder="Job title" class="form-control input-md" required="">
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="JobTitle">Job Category</label>
                    <div class="col-md-4">
                        <input id="JobTitle" value="@Model.JobCategory.JobCategoryName" type="text" placeholder="Job title" class="form-control input-md" required="">
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="ExpiryDate">Expiry Date</label>
                    <div class="col-md-4">
                        <input id="ExpiryDate" value="@Model.ExpiryDate" type="text" placeholder="Expiry Date" class="form-control input-md" required="">

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="ExpiryDate">Date Created</label>
                    <div class="col-md-4">
                        <input id="ExpiryDate" value="@Model.DateCreated" type="text" placeholder="Expiry Date" class="form-control input-md" required="">

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label" for="ExpiryDate">Views</label>
                    <div class="col-md-4">
                        <input id="ExpiryDate" value="@Model.Views" type="text" placeholder="Expiry Date" class="form-control input-md" required="">

                    </div>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="JobDescription">Job Description</label>
                    <div class="col-md-4">
                        <textarea class="form-control" id="JobDescription" value="@Model.JobDescription"></textarea>
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for=""></label>
                    <div class="col-md-4">
                        <button onclick="history.go(-1)" class="btn btn-danger">Go Back</button>
                    </div>
                </div>

            </fieldset>
        </form>

    </div>
</div>