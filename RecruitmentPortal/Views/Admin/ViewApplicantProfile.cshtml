@model RecruitmentPortal.Models.ViewModel.ApplicantViewModel
@{
    ViewBag.Title = "ViewApplicantProfile";
}

<div class="col-md-12">
    <div class="col-md-9">
        <form class="form-horizontal">
            <fieldset>

                <!-- Form Name -->
                <legend>Applicant Detail</legend>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="">Applicant Full Name</label>
                    <div class="col-md-4">
                        <input id="" value="@Model.Account.FirstName @Model.Account.LastName" type="text"  class="form-control input-md">
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="">Email</label>
                    <div class="col-md-4">
                        <input id="" value="@Model.Account.Email" type="text"  class="form-control input-md" >
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="">BirthDate</label>
                    <div class="col-md-4">
                        <input id="" value="@Model.Account.BirthDate" type="text"  class="form-control input-md" >

                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-4 control-label" for="">Country/State</label>
                    <div class="col-md-4">
                        <input id="" value="@Model.Account.State.Country.CountryName/ @Model.Account.State.StateName" type="text"  class="form-control input-md" >

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label" for="">Phone Number</label>
                    <div class="col-md-4">
                        <input id="" value="@Model.Account.PhoneNumber" type="text"  class="form-control input-md" >

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label" for="">Gender</label>
                    <div class="col-md-4">
                        <input id="" value="@Model.Account.Gender.GenderName" type="text"  class="form-control input-md">

                    </div>
                </div>
                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for="">Address</label>
                    <div class="col-md-4">
                        <textarea class="form-control" id="" value="@Model.Account.Address"></textarea>
                    </div>
                </div>


                <hr />

                <table class="table table-condensed">
                    <tr>
                        <td>Job Title </td>
                        <td>Application Date</td>
                        <td>Job Expiry Date</td>
                    </tr>
                    @foreach (var job in Model.UserApplications)
                    {
                        <tr>
                            <td>@job.Job.JobTitle </td>
                            <td>@job.DateApplied</td>
                            <td>@job.Job.ExpiryDate</td>
                        </tr>
                    }
                </table>
                <hr />
                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-4 control-label" for=""></label>
                    <div class="col-md-4">
                        <button onclick="history.go(-1)" class="btn btn-danger">Go Back</button>
                        <button onclick="history.go(-1)" class="btn btn-info">Send Email</button>
                    </div>
                </div>

            </fieldset>
        </form>

    </div>
</div>